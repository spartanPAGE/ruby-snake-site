<div class="article_form text-left">
  <%= form_for @article do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :content %><br>
      <%= f.text_area :content, { rows: "15" } %>
    </p>

    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>
